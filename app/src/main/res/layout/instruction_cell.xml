<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="#fff">

    <TextView
        android:id="@+id/txt_instruction_name"
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical"
        android:text="@string/instruction"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#E6592D"
        android:textSize="15dp" />

    <RelativeLayout
        android:id="@+id/RL_Temp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txt_instruction_name">


        <ImageView
            android:id="@+id/img_instruction_exe1"
            android:layout_width="230dp"
            android:layout_height="135dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/abdominal_crunches" />

        <Button
            android:id="@+id/btn_instruction_video"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/video_icon" />

    </RelativeLayout>

    <TextView
        android:id="@+id/txt_instruction1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="TEXT"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/darkcolor"
        android:textSize="10dp"
        android:layout_below="@+id/RL_Temp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>